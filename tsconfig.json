{
    "compilerOptions": {
        "outDir": "lib",
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "removeComments": true,
        "noEmitOnError": true,
        "strict": false,
        "alwaysStrict": false,
        "noImplicitAny": false,
        "typeRoots": ["node_modules/@types/"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
