{
  "compilerOptions": {
    "outDir": "lib",
    "lib": ["es2020"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "src/typings"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
